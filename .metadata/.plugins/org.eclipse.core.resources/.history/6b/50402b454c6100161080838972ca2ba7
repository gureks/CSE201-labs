import java.util.*;

public class Board
{
	private static char[][] arr;
	
	Board()
	{
		//Constructor class
		arr = new char[3][3];
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++)
			{
				arr[i][j]='-';
			}
		}
		
	}
	
	public int put(int x, int y, char val)
	{
		//Inserts the character at the coordinates (x,y).
		if(arr[x][y]=='-')
		{
			arr[x][y]=val;
			return 1;
		}
		else
		{
			System.out.println("Invalid coordinates.");
			return 0;
		}
	}
	
	public char[][] get()
	{
		//Returns the state of matrix
		return arr;
	}
	
	public void print()
	{
		//Prints the state of matrix
		for(int i=0;i<3;i++)
		{
			for(int j=0;j<3;j++)
			{
				System.out.printf("%c",arr[i][j]);
			}
			System.out.println("");
		}
	}
	
	public void checkState()
	{
		//Checks the state of matrix and print a message describing a win or a tie.
		int win=0,tie=0;
		char winVal;
		
		if(arr[0][0]==arr[0][1] && arr[0][1]==arr[0][2]) //top column
		{
			win=1;
			if(arr[0][0]=='X')
			{
				winVal='X';
			}
			else
			{
				winVal='O';
			}
				
		}
		
		else if(arr[1][0]==arr[1][1] && arr[1][1]==arr[1][2]) //middle column
		{
			win=1;
			if(arr[1][0]=='X')
			{
				winVal='X';
			}
			else
			{
				winVal='O';
			}
				
		}
		
		else if(arr[2][0]==arr[2][1] && arr[2][1]==arr[2][2]) //bottom column
		{
			win=1;
			if(arr[2][0]=='X')
			{
				winVal='X';
			}
			else
			{
				winVal='O';
			}
				
		}
		
		else if(arr[0][0]==arr[1][0] && arr[1][0]==arr[2][0]) //left row
		{
			win=1;
			if(arr[2][0]=='X')
			{
				winVal='X';
			}
			else
			{
				winVal='O';
			}
				
		}
		
		
	}

}
